    = render 'shared/application/privacy_statement'

    = render 'shared/a11y/footer_links'

    = render 'shared/operator/footer'
    = render 'shared/operator/fast_search'

    = javascript_include_tag(:operator)
    = render 'shared/javascripts'
    = yield(:javascript)
    = noscript_include_tag

    = render 'shared/google_analytics'
