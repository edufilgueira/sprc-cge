  %head

    = render 'shared/operator/head'

  %body{ data: { controller: controller_path } }

    = render 'shared/a11y/content_link'

    = render 'shared/ribbon'

    = render 'shared/operator/navbar'

    .container

      = render 'shared/operator/notice'

      = render 'shared/operator/alert'

      = render 'shared/operator/toolbar'

