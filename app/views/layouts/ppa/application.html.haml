!!! 5
%html{lang: 'pt-BR'}

  %head

    = render 'shared/ppa/head'

  %body{ data: { controller: controller_path } }
    = render 'shared/a11y/content_link'

    = render 'shared/ribbon'

    = render 'shared/navbar_mobile'

    = render 'shared/platform/logged_top_bar'

    = render 'shared/ppa/navbar'

    = yield(:before_container)

    .container

      = render 'shared/ppa/breadcrumbs'

      = render 'shared/ppa/notice'

      = render 'shared/ppa/alert'

      = render 'shared/ppa/toolbar'

      = render 'shared/a11y/content_anchor'

      = yield

    = render 'shared/a11y/footer_links'

    = render 'shared/application/footer'

    = javascript_include_tag(:ppa)
    = render 'shared/javascripts'
    = yield(:javascript)

    = render 'shared/google_analytics'

    = noscript_include_tag
