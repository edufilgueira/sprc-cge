= simple_form_for [resource], url: ppa_revision_review_problem_situation_strategies_path() do |f|

  .form-card
    = render partial: multistep_revision_path(:top)
    = render partial: multistep_revision_path(:problem_situation), locals: { f: f }
    = render partial: multistep_revision_path(:new_problem_situation), locals: { f: f, parent_form_alias: parent_form_alias }
    = render partial: multistep_revision_path(:regional_strategy)
    = render partial: multistep_revision_path(:new_regional_strategy), locals: { f: f, parent_form_alias: parent_form_alias }

  = f.hidden_field :plan_id, value: plan.id

  - if is_edit_region_theme?  #edição de tema revisado
    = link_to t('.back_to_resume') , ppa_revision_review_problem_situation_strategy_path(plan_id: plan.id, id: @review_problem_situation_strategy_id), class: 'previous action-button-previous'
    %input.next.action-button.next-step2{multisteps_next_btn_d_block, type: :submit}

  - else
    %input.previous.action-button-previous{multisteps_previous_btn}
    %input.next.action-button.next-step2{multisteps_next_btn, type: :submit}