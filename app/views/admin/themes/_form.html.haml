.container
  = simple_form_for [:admin, theme] do |f|

    .row
      .col-6
        = f.input :name, autofocus: true
      .col-6
        = f.input :code

    %hr{'aria-hidden': 'true'}

    .row
      .col-12
        = link_to t('.commands.cancel'), admin_themes_path, class: 'btn btn-warning pull-left'
        = f.submit t('commands.save'), class: 'btn btn-primary float-right'
