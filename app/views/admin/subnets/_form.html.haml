.container
  = simple_form_for [:admin, subnet] do |f|

    .row
      .col-sm-12
        = f.input :name, autofocus: true

    .row
      .col-sm-4
        = f.input :acronym

      .col-sm-8
        - organ_select_text = t('.organ.select')
        = f.association :organ, prompt: organ_select_text, collection: organs_for_select, input_html: { 'data-input': 'organ', 'aria-label': organ_select_text }

    .row
      .col-sm-12
        = f.input :ignore_sectoral_validation

    %hr{'aria-hidden': 'true'}

    .row
      .col-12
        = link_to t('.commands.cancel'), admin_subnets_path, class: 'btn btn-warning pull-left'
        = f.submit t('commands.save'), class: 'btn btn-primary float-right'
