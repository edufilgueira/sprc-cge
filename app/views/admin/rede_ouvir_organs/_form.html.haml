.container
  = simple_form_for [:admin, rede_ouvir_organ] do |f|

    .row
      .col-12
        = f.input :name, autofocus: true
    .row
      .col-sm-4
        = f.input :acronym
      .col-sm-4
        = f.input :code
      .col-sm-4
        = f.input :subnet, input_html: { class: 'mr-2' }

    .row
      .col-sm-12
        = f.input :ignore_cge_validation

    .row
      .col
        = f.input :description

    %hr{'aria-hidden': 'true'}

    .row
      .col-12
        = link_to t('.commands.cancel'), admin_rede_ouvir_organs_path, class: 'btn btn-warning pull-left'
        = f.submit t('commands.save'), class: 'btn btn-primary float-right'
