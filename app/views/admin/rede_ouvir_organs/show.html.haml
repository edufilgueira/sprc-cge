- content_for :breadcrumbs, render_breadcrumbs(breadcrumbs)

%h2.sr-only
  = t('.title')

.row

  .col-12

    .card.card-custom

      .card-header

        .row
          .col-8
            %h3.card-title
              = rede_ouvir_organ.title

          .col-4
            .float-right
              - if can?(:edit, rede_ouvir_organ)
                = link_to t('commands.edit'), edit_admin_rede_ouvir_organ_path(rede_ouvir_organ), class: 'btn text-muted btn-link'

              - if can?(:manage, rede_ouvir_organ)
                = render 'shared/buttons/btn_toggle_disabled', resource: rede_ouvir_organ, namespace: :admin

      .card-block

        = content_with_label(rede_ouvir_organ, :acronym)

        = content_with_label(rede_ouvir_organ, :name)

        = content_with_label(rede_ouvir_organ, :description)

        = content_with_label(rede_ouvir_organ, :code)

        = content_with_label(rede_ouvir_organ, :subnet)

        = content_with_label(rede_ouvir_organ, :ignore_cge_validation)

