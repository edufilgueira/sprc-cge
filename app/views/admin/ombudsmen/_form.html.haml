.container
  = simple_form_for [:admin, ombudsman] do |f|

    .row
      .col-12
        = f.input :title, autofocus: true

    .row
      .col-12
        = f.input :contact_name

    .row
      .col-6
        = f.input :phone

      .col-6
        = f.input :email

    .row
      .col-12
        = f.input :address

    .row
      .col-6
        = f.input :operating_hours

      .col-6
        = f.input :kind, collection: ombudsmen_kinds_for_select

    %hr{'aria-hidden': 'true'}

    .row
      .col-12
        = link_to t('.commands.cancel'), admin_ombudsmen_path, class: 'btn btn-warning pull-left'

        = f.submit t('commands.save'), class: 'btn btn-primary float-right'
