= javascript_include_tag('ckeditor/init')

.container
  = simple_form_for [:admin, search_content] do |f|

    .row
      .col-12
        = f.input :title, autofocus: true

    .row
      .col-12
        = f.input :description, as: :ckeditor, input_html: { ckeditor: { toolbar: :mini } }

    .row
      .col-12
        = f.input :content

    .row
      .col-12
        = f.input :link, hint: raw(t('.link.hint'))

    %hr{'aria-hidden': 'true'}

    .row
      .col-12
        = link_to t('.commands.cancel'), admin_search_contents_path, class: 'btn btn-warning pull-left'
        = f.submit t('commands.save'), class: 'btn btn-primary float-right'
