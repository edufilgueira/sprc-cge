%li.ticket-card.card.mb-4
  .card-header

    = link_to admin_service_type_path(service_type) do
      %h3.card-title{'aria-label': service_type.name}
        = highlight(service_type.name, params[:search])

    .card-commands

      - if can?(:show, service_type)
        = link_to t('commands.more_details'), admin_service_type_path(service_type), class: 'btn text-muted btn-link hover-link float-left d-inline-block', tabindex: -1

      - if can?(:edit, service_type)
        = link_to t('commands.edit'), edit_admin_service_type_path(service_type), class: 'btn text-muted btn-link hover-link float-left d-inline-block'

      - if can?(:manage, service_type)
        = link_to t('commands.remove'), admin_service_type_path(service_type), method: :delete, 'data-confirm': t('commands.remove_confirm'), class: 'btn text-danger btn-link hover-link float-left d-inline-block'


  .card-block

    .row
      .col-12.col-lg-6
        .mb-3
          .content-value{'aria-hidden':'true'}
            = content_with_label(service_type, :organ_name)


