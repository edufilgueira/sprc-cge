%h2.sr-only
  = t('.title')

.row

  .col-12

    .card.card-custom

      .card-header

        .row
          .col-8
            %h3.card-title
              = holiday.title

          .col-4
            .float-right

              - if can?(:manage, holiday)
                = link_to t('commands.remove'), admin_holiday_path(holiday), method: :delete, 'data-confirm': t('commands.remove_confirm'), class: 'btn text-danger btn-link'

              - if can?(:edit, holiday)
                = link_to t('commands.edit'), edit_admin_holiday_path(holiday), class: 'btn text-muted btn-link'

      .card-block
        .row
          .col
            = content_with_label(holiday, :day)
          .col
            = content_with_label(holiday, :month_str)
