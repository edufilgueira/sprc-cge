= simple_form_for configuration, as: :configuration, url: admin_integrations_eparcerias_configuration_path(configuration) do |f|

  .row
    .col-3
      = f.input :user, autofocus: true
    .col-3
      = f.input :password, input_html: { value: configuration.password }
    .col-3
      = f.input :import_type, as: :select, collection: transparency_eparcerias_configuration_import_types_for_select, input_html: { 'data-filter-bar-bypass-clear': '', class: 'form-control w-100 mb-3 import_type-datetimepicker' }

    .col-3
      = f.input :headers_soap_action

  %hr{'aria-hidden':'true'}

  .row
    .col-12
      = f.input :wsdl

  %hr

  %h5
    = Integration::Eparcerias::Configuration.human_attribute_name(:transfer_bank_order)
  .row
    .col-6
      = f.input :transfer_bank_order_operation
    .col-6
      = f.input :transfer_bank_order_response_path

  %hr

  %h5
    = Integration::Eparcerias::Configuration.human_attribute_name(:work_plan_attachment)
  .row
    .col-6
      = f.input :work_plan_attachment_operation
    .col-6
      = f.input :work_plan_attachment_response_path

  %hr

  %h5
    = Integration::Eparcerias::Configuration.human_attribute_name(:accountability)

  .row
    .col-6
      = f.input :accountability_operation
    .col-6
      = f.input :accountability_response_path


  %hr{'aria-hidden':'true'}

  .row
    .col-md-6
      = f.simple_fields_for :schedule do |s|
        = s.input :cron_syntax_frequency, hint: true

  %hr{'aria-hidden': 'true'}

  .row
    .col-12
      = link_to t('.commands.cancel'), admin_integrations_root_path, class: 'btn btn-warning pull-left'
      = f.submit t('commands.save'), class: 'btn btn-primary float-right'
