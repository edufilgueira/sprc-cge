%h2.sr-only
  = t('.title')

.row

  .col-12

    .card.card-custom

      .card-header

        .row
          .col-8
            %h3.card-title
              = answer_template.title

          .col-4
            .float-right
              - if can?(:edit, answer_template)
                = link_to t('commands.edit'), edit_operator_answer_template_path(answer_template), class: 'btn text-muted btn-link'

              - if can?(:manage, answer_template)
                = link_to t('commands.remove'), operator_answer_template_path(answer_template), method: :delete, 'data-confirm': t('commands.remove_confirm'), class: 'btn text-danger btn-link'


      .card-block
        .row
          .col-12
            = content_with_label(answer_template, :content)
