.container
  = simple_form_for [:operator, :reports, attendance_report] do |f|

    .card.card-custom

      .card-header

        %h2.card-title
          = t('.title')

      .card-block

        .row
          .col-12.col-lg-6
            = f.input :title, autofocus: true

          .col-12.col-lg-3
            = f.input :starts_at, as: :string, input_html: { value: attendance_report.starts_at, class: 'datetimepicker' }

          .col-12.col-lg-3
            = f.input :ends_at, as: :string, input_html: { value: attendance_report.ends_at, class: 'datetimepicker' }


        %hr{'aria-hidden': 'true'}

        .row
          .col-12
            = link_to t('commands.cancel'), operator_reports_attendance_reports_path, class: 'btn btn-warning pull-left'
            = f.submit t('commands.save'), class: 'btn btn-primary float-right'
