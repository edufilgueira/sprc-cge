= simple_form_for extension, :url => operator_ticket_extensions_organ_index_path(ticket), html: { method: :post } do |f|

  .row
    .col-12
      = f.input :description, as: :ckeditor, input_html: { ckeditor: { toolbar: :mini } }


  %hr{'aria-hidden':'true'}

  .row
    .col-12
      = link_to t('commands.cancel'), operator_ticket_path(ticket), class: 'btn btn-warning pull-left'

      = f.submit t('.save.title'), class: 'btn btn-primary float-right'
