- content_for :title, t(".title")
- content_for :breadcrumbs, render_breadcrumbs(breadcrumbs)

= javascript_include_tag('ckeditor/init')

.row

  .col-12

    .card.card-custom

      .card-header
        %h2.card-title= t(".title")

      .card-block

        .content

          = simple_form_for ticket, url: operator_note_path(ticket), method: :patch do |f|

            .row
              .col-12
                = f.input :note, as: :ckeditor, input_html: { ckeditor: { toolbar: :mini } }

            .row
              .col-12
                = link_to t('commands.cancel'), operator_ticket_path(ticket), class: 'btn btn-warning pull-left'
                = f.submit t('commands.save'), class: 'btn btn-primary float-right'
