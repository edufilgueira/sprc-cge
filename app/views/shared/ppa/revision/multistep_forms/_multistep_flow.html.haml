-# steps
#grad1.container-fluid
  .row.justify-content-center.mt-0
    .col-lg-12.text-center.p-0
      .card.px-0.pt-4.pb-0
        %h5.mb-5
          %strong= t("ppa.revision.#{controller_name}.multistep_form.title")
        .row
          .col-md-12.mx-0
            %form

              -# progressbar
              %ul#progressbar
                %li#account.active
                  %strong= t("ppa.revision.#{controller_name}.multistep_form.region")
                %li#personal
                  %strong= t("ppa.revision.#{controller_name}.multistep_form.theme")
                %li#payment
                  %strong= t("ppa.revision.#{controller_name}.multistep_form.#{controller_name}")
                %li#confirm
                  %strong= t("ppa.revision.#{controller_name}.multistep_form.resume")
                %li#conclusion
                  %strong= t("ppa.revision.#{controller_name}.multistep_form.conclusion")