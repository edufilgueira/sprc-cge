- if report.processing?
  = render 'shared/operator/reports/report_progress', report: report

- else

  - if report.file.present?

    %h4.h6
      = t('.title')

    %hr{'aria-hidden': 'true'}

    .row

      %dt.col-12.col-lg-5.text-right
        = t('.file.size')
      %dd.col-12.col-lg-7
        = number_to_human_size(report.file.size)

      %dt.col-12.col-lg-5.text-right
        = t('.file.total')
      %dd.col-12.col-lg-7
        = report.total

      %dt.col-12.col-lg-5.text-right
        = t('.file.created_at')
      %dd.col-12.col-lg-7
        = l(report.created_at, format: :short)
