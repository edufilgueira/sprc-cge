= render 'shared/transparency/index/stats', stats: stats, paths: { xlsx: xlsx_download_path, csv: csv_download_path } do

  .row
    .col-12
      - total_data = stats.data[:total]
      - stats_year = stats.year
      - year = stats_year

      .row
        .col-12.col-lg-4
          .content-with-label
            - label = raw(t('shared.transparency.expenses.fund_supplies.index.stats.count', date: year))
            - value = number_with_delimiter(total_data[:count])

            %label.content-label{'aria-label': label, title: label}
              = label

            .content-value{'aria-label': value, title: value}
              .h3.text-muted
                = value

        .col-12.col-lg-4
          .content-with-label
            - label = raw(t('shared.transparency.expenses.fund_supplies.index.stats.valor', date: year))
            - value = number_to_currency(total_data[:calculated_valor_final])

            %label.content-label{'aria-label': label, title: label}
              = label

            .content-value{'aria-label': value, title: value}
              .h3.text-muted
                = value

        .col-12.col-lg-4
          .content-with-label
            - label = raw(t('shared.transparency.expenses.fund_supplies.index.stats.valor_pago', date: year))
            - value = number_to_currency(total_data[:calculated_valor_pago_final])

            %label.content-label{'aria-label': label, title: label}
              = label

            .content-value{'aria-label': value, title: value}
              .h3.text-muted
                = value

        .col-12
          - charts_tabs = [:management_unit, :razao_social_credor]
          - charts_path = 'expenses/fund_supplies'

          = render 'shared/transparency/index/charts', stats: stats, charts_path: charts_path, charts_tabs: charts_tabs, base_locale: t('shared.transparency.expenses.fund_supplies.index.charts')

