= render 'shared/transparency/index/stats', stats: stats, paths: { xlsx: xlsx_download_path, csv: csv_download_path } do

  .row
    .col-12
      - total_data = stats.data[:total]
      - stats_year = stats.year
      - year = stats_year

      .row
        .col-12.col-lg-4
          .content-with-label
            - label = raw(t('shared.transparency.revenues.registered_revenues.index.stats.valor_lancado', date: year))
            - value = number_to_currency(total_data[:valor_lancado])

            %label.content-label{'aria-label': label, title: label}
              = label

            .content-value{'aria-label': value, title: value}
              .h3.text-muted
                = value

        .col-12
          - charts_tabs = [:month, :revenue]
          - charts_path = 'revenues/registered_revenues'

          = render 'shared/transparency/index/charts', stats: stats, charts_path: charts_path, charts_tabs: charts_tabs, base_locale: t('shared.transparency.revenues.registered_revenues.index.charts')
