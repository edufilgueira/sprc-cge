= render 'shared/transparency/index/stats', stats: stats, paths: { xlsx: xlsx_download_path, csv: csv_download_path } do

  .row
    .col-12
      - total_data = stats.data[:total]
      - stats_year = stats.year
      - year = stats_year

      .row
        .col-12.col-lg-6
          .content-with-label
            - label = raw(t('shared.transparency.macroregion_investiments.index.stats.valor_lei', date: year))
            - value = number_to_currency(total_data[:valor_lei])

            %label.content-label{'aria-label': label, title: label}
              = label

            .content-value{'aria-label': value, title: value}
              .h3.text-muted
                = value

        .col-12
          - charts_tabs = [:descricao_regiao, :descricao_poder]
          - charts_path = 'macroregion_investiments'

          = render '/shared/transparency/index/charts', stats: stats, charts_path: charts_path, charts_tabs: charts_tabs, base_locale: t('shared.transparency.macroregion_investiments.index.charts')
