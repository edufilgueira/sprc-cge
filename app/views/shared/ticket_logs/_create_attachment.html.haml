- attachment = ticket_log.resource
- if can? :view, attachment
  .row

    .col-12.col-md-1.no-print
      .float-left

        .bg-faded.rounded-circle.p-1

          %i.fa.fa-paperclip.fa-1x.text-muted.m-2{ 'aria-hidden': 'true' }

    .col-12.col-md-11.pt-3.pt-md-1

      .text-muted

        %h4.h6.mb-0
          = t('.title', name: ticket_log.responsible.title)

        .small
          %em
            = l(attachment.created_at, format: :shorter)

        .small
          %em
            = content_tag(:a, attachment.document_filename, href: document_url(attachment), download: attachment.document_filename, target: :_blank)


  %hr{'aria-hidden': 'true'}

